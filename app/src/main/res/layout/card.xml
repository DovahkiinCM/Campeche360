<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#96bcb4b4"
    android:elevation="5dp"
    android:id="@+id/card"
    android:layout_gravity="center_horizontal"
    android:layout_width="300dp"
    android:layout_height="250dp"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/card_image"
        android:src="@drawable/image1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            android:text="Evento Predeterminado"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/card_btn1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/card_text_desc"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp"
            android:background="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/card_btn2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignTop="@+id/card_btn1"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/card_btn1"
            android:background="@drawable/ic_about" />

        <TextView
            android:id="@+id/card_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_text"
            android:layout_marginStart="15dp"
            android:text="Descripción Descripción Descripción"
            android:textAllCaps="false"
            android:textSize="11sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>